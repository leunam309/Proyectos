<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="leunam.sparelajarte.fragments.PerfilFragment">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity$PlaceholderFragment"
        android:layout_gravity="right|top">


        <Switch
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_modificar"
            android:id="@+id/switch1"
            android:checked="false"
            android:background="@drawable/botones"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="36dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_guardarperfil"
            android:id="@+id/buttonguardarperfil"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="31dp"
            android:background="@drawable/botones" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="230dp"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:hint="Usuario"
                android:background="@drawable/botonesytexto"
                android:ems="10"
                android:textAlignment="center"
                android:id="@+id/editTextUserReg"
                android:layout_below="@+id/switch1"
                android:layout_alignStart="@+id/editTextEmailReg"
                android:layout_marginBottom="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:textAlignment="center"
                android:ems="10"
                android:background="@drawable/botonesytexto"
                android:id="@+id/editTextEmailReg"
                android:layout_below="@+id/editTextUserReg"
                android:layout_alignStart="@+id/editTextNombre"
                android:layout_marginBottom="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:hint="Nombre"
                android:background="@drawable/botonesytexto"
                android:textAlignment="center"
                android:ems="10"
                android:id="@+id/editTextNombre"
                android:layout_above="@+id/editTextApe"
                android:layout_alignStart="@+id/editTextApe"
                android:layout_marginBottom="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:hint="Apellido"
                android:background="@drawable/botonesytexto"
                android:ems="10"
                android:id="@+id/editTextApe"
                android:textAlignment="center"
                android:layout_above="@+id/buttonguardarperfil"
                android:layout_centerHorizontal="true" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
