<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="leunam.sparelajarte.activitys.ReservaActivity"
    android:background="@drawable/relax">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="34dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/txt_centro_reserva"
                android:id="@+id/textView6"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="centro"
                android:id="@+id/textnomcentro"
                android:layout_above="@+id/textView7"
                android:layout_alignEnd="@+id/textnombreserv"
                android:layout_marginLeft="5dp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_weight="0.06">

            <TextView
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/txt_servicio_reser"
                android:id="@+id/textView7"
                android:layout_below="@+id/textView6"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/textView3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="servicio"
                android:id="@+id/textnombreserv"
                android:layout_alignBottom="@+id/textView7"
                android:layout_toEndOf="@+id/textView6"
                android:layout_marginTop="30dp"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txt_m_servicios"
        android:gravity="center"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerServiciom"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txt_fechayhoramodi"
        android:id="@+id/textView5"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/spinnerServiciom"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_m_reserva"
        android:id="@+id/buttonreservadom"
        android:background="@drawable/botones"
        android:textColor="#000"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/texthoram" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00-00-0000"
        android:id="@+id/textfecham"
        android:textSize="27dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00:00"
        android:gravity="center"
        android:id="@+id/texthoram"
        android:textSize="27dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/textfecham"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_delete_m_reser"
        android:id="@+id/buttonEliminarreser"
        android:background="@drawable/botoneseliminar"
        android:textColor="#000"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/texthoram" />


</RelativeLayout>
