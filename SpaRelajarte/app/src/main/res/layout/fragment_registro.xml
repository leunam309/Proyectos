<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="leunam.sparelajarte.fragments.RegistroFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity$PlaceholderFragment"
        android:layout_gravity="center"
        android:background="@drawable/relax">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:hint="Usuario"
            android:textAlignment="center"
            android:ems="10"
            android:id="@+id/editTextUserReg"
            android:background="@drawable/botonesytexto"
            android:layout_above="@+id/editTextPassReg"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="ContraseÃ±a"
            android:textAlignment="center"
            android:id="@+id/editTextPassReg"
            android:background="@drawable/botonesytexto"
            android:layout_above="@+id/editTextEmailReg"
            android:layout_alignStart="@+id/editTextUserReg"
            android:layout_marginBottom="43dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:ems="10"
            android:id="@+id/editTextEmailReg"
            android:textAlignment="center"
            android:background="@drawable/botonesytexto"
            android:layout_above="@+id/buttonRegistrar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="54dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_registro"
            android:id="@+id/buttonRegistrar"
            android:background="@drawable/botones"
            android:textColor="@android:color/black"
            android:layout_marginBottom="99dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</FrameLayout>
